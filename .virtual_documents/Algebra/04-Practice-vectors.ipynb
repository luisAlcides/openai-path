def row_to_col(row):
    # ensure row is 1D
    row = np.array(row)
    n = row.shape[0]
    print("n = row.shape[0]: ", row.shape[0])

    # create empty column vector
    col = np.zeros((n,1))
    print("col = np.zeros((n+1)): ", np.zeros((n+1)))

    # fill it using a for loop
    for i in range(n):
        col[i, 0] = row[i]

    return col


# example
